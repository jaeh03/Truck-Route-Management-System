@model Route 
@{ 
    Layout = "_Layout"; 
    ViewData["Title"] = "Route By Id"; 
}

<h1>Route By ID</h1>
<a asp-action="index" class="btn btn-sm btn-primary">Back</a>
<h2>@ViewBag.StatusCode</h2>

<form method="post" asp-action="GetRouteID">
    <div class="form-group">
        <label for="RouteID">Route ID: </label>
        <input class="form-control" name="RouteID" />
    </div>
    <br />
    <button class="btn btn-dark" type="submit">Search</button>

</form>

@if(Model != null){
    <h1>Details for @Model.RouteID route</h1>
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Route ID</th>
                <th>Route Name</th>
                <th>Route Length</th>
                <th>Route Pay Per KM</th>
            </tr>
        </thead>
        <tr>
            <td>@Model.RouteID</td>
            <td>@Model.route_name</td>
            <td>@Model.r_length</td>
            <td>@Model.r_pay_per_km</td>
        </tr>
    </table>
}