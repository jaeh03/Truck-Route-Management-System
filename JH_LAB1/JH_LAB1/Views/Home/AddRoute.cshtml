@model Route
@{
    Layout = "_Layout";
    ViewData["Title"] = "Add Route";
}

<h1>Add Route</h1>
<a asp-action="index" class="btn btn-sm btn-primary">Back</a>

<form method="post" asp-action="AddRoute">
    <div class="form-group">
        <label for="route_name">Route Name: </label>
        <input class="form-control" name="route_name" />
    </div>
    <div class="form-group">
        <label for="r_length">Route Length: </label>
        <input class="form-control" name="r_length" />
    </div>

    <div class="form-group">
        <label for="r_pay_per_km">Route Pay Per KM: </label>
        <input class="form-control" name="r_pay_per_km" />
    </div>
    <br />
    <button class="btn btn-dark" type="submit">Add</button>
</form>

@if (Model != null)
{
    <h1>Details for @Model.RouteID route</h1>

    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Route ID</th>
                <th>Route Name</th>
                <th>Route Length</th>
                <th>Route Pay Per KM</th>
            </tr>
        </thead>
        <tr>
            <td>@Model.RouteID</td>
            <td>@Model.route_name</td>
            <td>@Model.r_length</td>
            <td>@Model.r_pay_per_km</td>
        </tr>
    </table>
}