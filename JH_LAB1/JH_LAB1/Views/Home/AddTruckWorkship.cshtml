@model TruckWorkshop
@{
    Layout = "_Layout";
    ViewData["Title"] = "Add Truck Workshop";
}

<h1>Add Truck Workshop</h1>
<a asp-action="index" class="btn btn-sm btn-primary">Back</a>

<form method="post" asp-action="AddTruckWorkshop">
    <div class="form-group">
        <label for="workDescription">Work Description: </label>
        <input class="form-control" name="workDescription" />
    </div>
    <div class="form-group">
        <label for="cost">Cost: </label>
        <input class="form-control" name="cost" />
    </div>

    <div class="form-group">
        <label for="Truck_ID">Truck Id: </label>
        <input class="form-control" name="Truck_ID" />
    </div>
    <br />
    <button class="btn btn-dark" type="submit">Add</button>
</form>

@if (Model != null)
{
    <h1>Details for @Model.WorkOrderID Truck Workshop</h1>

    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Truck ID</th>
                <th>Truck Model</th>
                <th>Truck Make</th>
                <th>Truck ID</th>
            </tr>
        </thead>
        <tr>
            <td>@Model.WorkOrderID</td>
            <td>@Model.workDescription</td>
            <td>@Model.cost</td>
            <td>@Model.Truck_ID</td>
        </tr>
    </table>
}