@model Truck
@{ 
    Layout = "_Layout"; 
    ViewData["Title"] = "Truck By Id"; 
}

<h1>Truck By ID</h1>
<a asp-action="index" class="btn btn-sm btn-primary">Back</a>
<h2>@ViewBag.StatusCode</h2>

<form method="post" asp-action="GetTruckID">
    <div class="form-group">
        <label for="Truck_ID">Truck ID: </label>
        <input class="form-control" name="Truck_ID" />
    </div>
    <br />
    <button class="btn btn-dark" type="submit">Search</button>

</form>

@if(Model != null){
    <h1>Details for @Model.Truck_ID route</h1>
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Truck ID</th>
                <th>Truck Model</th>
                <th>Truck Make</th>
                <th>Route ID</th>
            </tr>
        </thead>
        <tr>
            <td>@Model.Truck_ID</td>
            <td>@Model.t_model</td>
            <td>@Model.r_make</td>
            <td>@Model.RouteID</td>
        </tr>
    </table>
}