@model Truck
@{
    Layout = "_Layout";
    ViewData["Title"] = "Add Truck";
}

<h1>Add Truck</h1>
<a asp-action="index" class="btn btn-sm btn-primary">Back</a>

<form method="post" asp-action="AddTruck">
    <div class="form-group">
        <label for="t_model">Truck Model: </label>
        <input class="form-control" name="t_model" />
    </div>
    <div class="form-group">
        <label for="t_make">Truke Make: </label>
        <input class="form-control" name="t_make" />
    </div>

    <div class="form-group">
        <label for="RouteID">Route Id: </label>
        <input class="form-control" name="RouteID" />
    </div>
    <br />
    <button class="btn btn-dark" type="submit">Add</button>
</form>

@if (Model != null)
{
    <h1>Details for @Model.RouteID route</h1>

    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Truck ID</th>
                <th>Truck Model</th>
                <th>Truck Make</th>
                <th>Route ID</th>
            </tr>
        </thead>
        <tr>
            <td>@Model.Truck_ID</td>
            <td>@Model.t_model</td>
            <td>@Model.r_make</td>
            <td>@Model.RouteID</td>
        </tr>
    </table>
}